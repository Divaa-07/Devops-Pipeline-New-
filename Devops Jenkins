pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo 'Checking out code...'
                    git branch: 'main', url: 'https://github.com/Divaa-07/Devops-Pipeline-New-.git'
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                    sh 'mvn clean package'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    sh 'mvn test'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying the application...'
                    sh 'docker build -t your-image-name .'
                    sh 'docker run -d -p 8080:8080 your-image-name'
                }
            }
        }
    }

    post {
        always {
            script {
                echo 'Cleaning up...'
                // Clean up steps, e.g., remove Docker containers
            }
        }
        success {
            script {
                echo 'Pipeline succeeded!'
            }
        }
        failure {
            script {
                echo 'Pipeline failed!'
            }
        }
    }
}
